# Environment Configuration
NODE_ENV=development

# Database
DB_USER=hebrew_ai
DB_PASSWORD=hebrew_ai_pass
DB_NAME=hebrew_ai_agents
DATABASE_URL=postgresql://hebrew_ai:hebrew_ai_pass@localhost:5432/hebrew_ai_agents

# Redis
REDIS_URL=redis://localhost:6379

# MinIO Object Storage
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# API Keys for LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Hebrew NLP Services
DICTA_API_KEY=your-dicta-api-key
HEBREW_NLP_SERVICE_URL=http://localhost:5000

# Israeli Payment Gateways
TRANZILA_TERMINAL_NAME=your-terminal-name
CARDCOM_TERMINAL_NUMBER=your-terminal-number
CARDCOM_USER_NAME=your-username

# Israeli SMS Services
INFOBIP_API_KEY=your-infobip-key
INFOBIP_BASE_URL=https://api.infobip.com

# WhatsApp Business
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-id

# Google Cloud (for Speech-to-Text in Hebrew)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,text/csv

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_VOICE_RECOGNITION=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_ADVANCED_ANALYTICS=false

# Agent Configuration
DEFAULT_AGENT_MODEL=gpt-4
MAX_TOKENS_PER_REQUEST=2000
TEMPERATURE=0.7

# Hebrew Specific Settings
DEFAULT_LANGUAGE=he
ENABLE_NIKUD=true
ENABLE_GEMATRIA=false
HEBREW_CALENDAR_API=https://www.hebcal.com/hebcal