# Backend specific environment variables

# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://hebrew_ai:hebrew_ai_pass@localhost:5432/hebrew_ai_agents

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=hebrew-ai-storage

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Hebrew NLP
HEBREW_NLP_SERVICE_URL=http://localhost:5000
ENABLE_NIKUD=true
ENABLE_SPELL_CHECK=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@hebrew-ai-agents.co.il

# Bull Queue
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=5

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet